<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>MostrarSueldo</servlet-name>
        <servlet-class>com.afp.view.MostrarSueldo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DatosEmpleado</servlet-name>
        <servlet-class>com.afp.controller.DatosEmpleado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>exitoServlet</servlet-name>
        <servlet-class>com.afp.view.exitoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>errorServlet</servlet-name>
        <servlet-class>com.afp.view.errorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exitoServlet</servlet-name>
        <url-pattern>/exito.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>errorServlet</servlet-name>
        <url-pattern>/error.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatosEmpleado</servlet-name>
        <url-pattern>/Empleado.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarSueldo</servlet-name>
        <url-pattern>/MSueldo.view</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>IngresarDatosEmpleado.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
